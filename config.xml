<?xml version='1.0' encoding='utf-8'?>
<widget id="iut2.lpmiaw.demonotessql" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>EventReminder</name>
    <description>
        Une application MVC en cordova+JQuery Mobile+Sqlite.
    </description>
    <author email="emmanuel.smith@jagfx.fr" href="http://www.jagfx.fr">
        SMITH Emmanuel
    </author>
    <content src="app/index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
	<plugin name="cordova-plugin-camera" spec="~2.4.0" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
	<plugin name="cordova-plugin-contacts" spec="~2.3.0" />
	<plugin name="cordova-plugin-geolocation" spec="~2.4.2" />
	<plugin name="cordova-sqlite-storage" spec="https://github.com/litehelpers/Cordova-sqlite-storage.git" />
	<plugin name="cordova-plugin-x-toast" spec="https://github.com/EddyVerbruggen/Toast-PhoneGap-Plugin.git" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.2" />
	<plugin name="cordova-plugin-datepicker" spec="https://github.com/VitaliiBlagodir/cordova-plugin-datepicker.git" />
</widget>
